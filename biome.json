{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off"
      },
      "style": {
        "noNonNullAssertion": {
          "level": "warn"
        },
        "useImportType": {
          "level": "warn"
        }
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",

        "noSvgWithoutTitle": "off",
        "useAltText": "off"
      }
    },
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/public/**",
      "**/.cache/**",
      "**/.idea/**",
      "**/.vscode/**",
      "**/.git/**"
    ]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "enabled": true,
    "lineWidth": 120,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/public/**",
      "**/.cache/**",
      "**/.idea/**",
      "**/.vscode/**",
      "**/.git/**"
    ]
  }
}
